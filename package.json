{
  "name": "@3fv/guard",
  "version": "1.0.11",
  "description": "TypeScript guard suite",
  "main": "index.js",
  "types": "index.d.ts",
  "resolutions": {
    "lodash": "^4.17.15",
    "lodash.template": "^4.5.0"
  },
  "scripts": {
    "build": "mkdir -p lib && cp package.json lib && tsc -b tsconfig.json",
    "build:watch": "yarn run build -- --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "yarn run build",
    "postversion": "./scripts/release.sh $npm_package_version",
    "release": "yarn build && yarn test && yarn version --patch --non-interactive"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "**/*.ts",
    "**/*.js",
    "**/*.map",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3fv/guard.git"
  },
  "keywords": [
    "typescript",
    "guard",
    "typeguard",
    "typesafe",
    "type",
    "check"
  ],
  "author": "Jonathan Glanz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/3fv/guard/issues"
  },
  "homepage": "https://github.com/3fv/guard#readme",
  "dependencies": {
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.17",
    "jest": "^24.2.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  }
}
