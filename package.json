{
  "name": "@3fv/guard",
  "version": "1.4.35",
  "description": "TypeScript guard suite",
  "main": "index.js",
  "types": "index.d.ts",
  "resolutions": {
    "lodash": "^4.17.21",
    "lodash.template": "^4.5.0"
  },
  "scripts": {
    "init": "mkdir -p lib && cat package.json | jq 'del(.scripts)' > lib/package.json",
    "build": "yarn run init && tsc -b tsconfig.json",
    "build:link": "yarn run init && cd lib && yarn unlink;yarn link && cd ..",
    "build:watch": "run-s build build:link && tsc -b tsconfig.json --watch --preserveWatchOutput",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:dev": "run-s build && run-p test:watch build:watch",
    "preversion": "yarn build && yarn test",
    "postversion": "./scripts/release.sh latest",
    "release": "yarn version --patch --non-interactive"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "**/*.d.ts",
    "**/*.js",
    "**/*.map",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3fv/guard.git"
  },
  "keywords": [
    "typescript",
    "guard",
    "typeguard",
    "typesafe",
    "type",
    "check"
  ],
  "author": "Jonathan Glanz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/3fv/guard/issues"
  },
  "homepage": "https://github.com/3fv/guard#readme",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@swc/core": "^1.7.6",
    "@swc-node/core": "^1.13.3",
    "@swc-node/jest": "^1.8.12",
    "@swc-node/register": "^1.10.9",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.1.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  }
}
